<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:layout_anchor="@+id/appBarLayout"
            app:layout_anchorGravity="center"
            app:menu="@menu/top_app_bar"
            app:navigationIcon="@drawable/ic_baseline_keyboard_backspace_24"
            app:title="My배민"
            app:titleCentered="true"
            app:titleTextColor="@color/black" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boundaries_bottom"
                android:drawableStart="@drawable/ic_baseline_account_circle_24"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:paddingTop="16dp"
                android:paddingEnd="20dp"
                android:paddingBottom="16dp"
                android:text="  귀한분, 김정호"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boundaries_bottom"
                android:orientation="horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingStart="26dp"
                    android:paddingBottom="6dp"
                    android:text="   귀한분 출두요~!"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:drawableStartCompat="@drawable/ic_baseline_run_circle_24" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/background_corner_10_solid_f6f6f6"
                    android:minHeight="0dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="등급별 혜택"
                    android:textColor="@color/black" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/boundaries_bottom_right"
                    android:drawableTop="@drawable/ic_baseline_add_circle_24"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="포인트"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/boundaries_bottom"
                    android:drawableTop="@drawable/ic_baseline_inbox_24"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="쿠폰함"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/boundaries_bottom_reft"
                    android:drawableTop="@drawable/ic_baseline_card_giftcard_24"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="선물함"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/boundaries_bottom_right"
                    android:drawableTop="@drawable/ic_baseline_heart_broken_24"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="찜"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/boundaries_bottom"
                    android:drawableTop="@drawable/ic_baseline_article_24"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="주문내역"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/boundaries_bottom_reft"
                    android:drawableTop="@drawable/ic_baseline_chat_bubble_outline_24"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="리뷰관리"
                    android:textColor="@color/black" />
            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F3F4F6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boundaries_bottom">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/shape_white"
                    android:drawableStart="@drawable/ic_baseline_menu_book_24"
                    android:drawablePadding="16dp"
                    android:gravity="start"
                    android:padding="20dp"
                    android:text="앗, 숨겨진 만화책방을\n발견하셨군요!"
                    android:textColor="#8F8F8F" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_corners"
                    android:minHeight="0dp"
                    android:padding="10dp"
                    android:text="만화 보러가기 >"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F3F4F6" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boundaries_bottom"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="배민그린\n일회용 수저포크 덜 받기 함께해요"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boundaries_bottom"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="배민페이\n배민페이로 빠르고 간편하게 결제해보세요!"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F3F4F6" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boundaries_bottom"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="가족계정 관리\n결제수단을 공유해 우리 가족의 끼니를 챙겨주세요."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boundaries_bottom"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="배민커넥트 지원\n오토바이부터 자전거까지, 배달하고 수입 만들어요!"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boundaries_bottom"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="공지사항"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boundaries_bottom"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="이벤트"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boundaries_bottom"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="고객센터"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boundaries_bottom"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="환경설정"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boundaries_bottom"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="약관 및 정책"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boundaries_bottom"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="현재 버전 11.43.0"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#F3F4F6"
                android:gravity="center"
                android:text="Copyright Woowa Brothers in Song-pa, All Rights Reserved."
                android:textColor="#858688"
                android:textSize="11sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>